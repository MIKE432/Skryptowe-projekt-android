<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apusart.skryptowe_projekt_android">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".GymApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.guest.initial_activity.InitialActivity" android:theme="@style/LoginTheme" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.guest.login_activity.LoginActivity" android:theme="@style/LoginTheme" />
        <activity android:name=".ui.guest.register_activity.RegisterActivity" android:theme="@style/LoginTheme" android:noHistory="true"/>
        <activity android:name=".ui.logged.main.MainLoggedActivity" android:theme="@style/LoggedTheme"/>
        <activity android:name=".ui.logged.add_training.add_training_process.AddTrainingProcessActivity" android:theme="@style/LoggedTheme"/>
    </application>

</manifest>