<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layoutDescription="@xml/modal_scene">

    <androidx.cardview.widget.CardView
        android:id="@+id/modal_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:cardBackgroundColor="@color/error_background_color"
        app:cardCornerRadius="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/modal_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/modal_icon"
                app:layout_constraintBottom_toTopOf="@id/modal_information"
                android:layout_marginEnd="20dp"
                tools:text="Login error"
                tools:textColor="@color/white"
                android:textAppearance="@style/TitleRoboto20Pt"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/modal_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/modal_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/modal_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                tools:text="Invalid email or password"
                tools:textColor="@color/white"
                android:textAppearance="@style/Roboto14Pt"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/modal_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                tools:src="@drawable/close_icon128"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.motion.widget.MotionLayout>