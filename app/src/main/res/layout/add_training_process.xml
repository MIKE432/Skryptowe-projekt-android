<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.apusart.skryptowe_projekt_android.ui.logged.add_training.add_training_process.AddTrainingProcessViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.apusart.skryptowe_projekt_android.ui.components.HeaderView
            android:id="@+id/add_training_process_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:header_view_leading_icon="@drawable/back_icon128"
            app:layout_constraintTop_toTopOf="parent"/>
        <fragment
            android:id="@+id/add_training_process_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/add_training_process_step_view_container"
            app:layout_constraintTop_toBottomOf="@id/add_training_process_header"
            app:navGraph="@navigation/add_training_process_graph"
            app:defaultNavHost="true"/>
        <LinearLayout
            android:id="@+id/add_training_process_step_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:padding="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"/>
            <com.apusart.skryptowe_projekt_android.ui.components.ProgressView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:progress_view_count="3"
                android:layout_marginHorizontal="5dp"
                app:progress_view_current="@{viewModel.step}"
                android:layout_marginBottom="10dp"/>
            <com.apusart.components.ProgressButton
                android:id="@+id/add_training_process_progress_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
